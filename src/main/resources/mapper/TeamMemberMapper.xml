<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="zxylearn.bcnlserver.mapper.TeamMemberMapper">

    <resultMap id="TeamMemberVOMap" type="zxylearn.bcnlserver.pojo.DTO.TeamMemberVO">
        <result property="position" column="position"/>
        <result property="joinTime" column="join_time"/>
        <association property="user" javaType="zxylearn.bcnlserver.pojo.entity.User">
            <id property="id" column="u_id"/>
            <result property="username" column="u_username"/>
            <result property="email" column="u_email"/>
            <result property="name" column="u_name"/>
            <result property="avatar" column="u_avatar"/>
            <result property="birthday" column="u_birthday"/>
            <result property="phone" column="u_phone"/>
            <result property="gender" column="u_gender"/>
            <result property="address" column="u_address"/>
            <result property="admin" column="u_admin"/>
        </association>
    </resultMap>
    <select id="selectTeamMembers" resultMap="TeamMemberVOMap">
        SELECT 
            tm.position,
            tm.join_time,
            u.id AS u_id,
            u.username AS u_username,
            u.email AS u_email,
            u.name AS u_name,
            u.avatar AS u_avatar,
            u.birthday AS u_birthday,
            u.phone AS u_phone,
            u.gender AS u_gender,
            u.address AS u_address,
            u.admin AS u_admin
        FROM team_member tm
        INNER JOIN user u ON tm.member_id = u.id
        WHERE tm.team_id = #{teamId}
    </select>

</mapper>